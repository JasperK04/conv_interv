    </category>
    
    
    <!-- Greetings -->
    <category>
        <pattern>^ BYE ^</pattern>
        <delay>1</delay>
        <template>
            <random>
                <li>Goodbye. Hope to hear from you again.</li>
                <li>Bye Bye. See you soon.</li>
                <li>Bye. for now.</li>
            </random>
            <think>
                <set name="topic">*</set>
                <set name="currentTopic">unknown</set>
            </think>
        </template>
    </category>

    <!-- Similar Greetings -->
