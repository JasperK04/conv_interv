<aiml version="2.0">
	
	<!-- Greetings -->
    <category>
        <pattern>HELLO ^</pattern>
        <template>
            <delay>1</delay>
            <random>
                <li>Hello! I’m Popcorn, your personal movie guide. What genre or movie do you like?</li>
                <li>HI, I am your personal movie assistant, call me Popcorn. What is your favorite genre or movie?</li>
                <li>Hey, movie lover I’m Popcorn, here to butter up your evenings with some blockbuster suggestions. So what movie or genre do you like?</li>
            </random>
            <think>
                <set name="topic">genre</set>
                <set name="currentTopic">genre</set>
            </think>
        </template>
    </category>

    <!-- Similar Greetings -->
    <category>
        <pattern>HI ^</pattern>
        <template><srai>HELLO</srai></template>
    </category>
    
    <category>
        <pattern>HALLO ^</pattern>
        <template><srai>HELLO</srai></template>
    </category>

    <category>
        <pattern>HEY ^</pattern>
